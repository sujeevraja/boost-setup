{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "presentation": {
        "reveal": "always"
    },
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake ..",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "shell",
            "label": "cmake (debug)",
            "command": "cmake -Ddebug=ON ..",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "shell",
            "label": "make",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "shell",
            "label": "clear",
            "command": "rm -rf *",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "shell",
            "label": "run",
            "command": "cd ../bin && ./main",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
    ]
}